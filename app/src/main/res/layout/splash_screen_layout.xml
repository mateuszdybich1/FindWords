<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".SplashScreenActivity">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@drawable/app_logo" android:id="@+id/splashScreen_IV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.29000002"/>
    <TextView
            android:text="Find Words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/splashScreen_TV"
            app:layout_constraintTop_toBottomOf="@+id/splashScreen_IV"

            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" style="@style/Widget.AppCompat.TextView"
            android:fontFamily="@font/holtwood_one_sc" app:layout_constraintVertical_bias="0.32"/>
</androidx.constraintlayout.widget.ConstraintLayout>